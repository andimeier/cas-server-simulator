  "main": "app/cas_server.js",
  "repository": {
    "type": "git",
    "url": "https://github...."
  },
  "dependencies": {
    "cookie-session": "^2.0.0-beta.1",
    "express": "^4.5",
    "lodash": "~4.17",
    "path": "^0.12.7",
    "randomstring": "^1.1.5",
    "winston": "~0.7.3",
    "xmlbuilder": "^4.1.0"
  },
  "scripts": {
    "start": "node app/cas_server.js",
    "api-doc": "node node_modules/aglio/bin/aglio.js -i CAS_API.apib -o doc/api/cas-api.html && start doc/api/cas-api.html",
